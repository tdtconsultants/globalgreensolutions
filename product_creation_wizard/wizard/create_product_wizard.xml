<odoo>
    <record id="create_product_wizard_view" model="ir.ui.view">
        <field name="name">Create Product Wizard</field>
        <field name="model">product.create_wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="base_material" domain="[('categ_id.name', '=', 'Raw materials')]"/>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="uom"/>
                            <field name="conversion"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="create_product" string="Create" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>